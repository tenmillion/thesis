% title page
%
%\typeout{titlepage}
\renewcommand{\titlepage}{
        \newpage
        \thispagestyle{empty}
        \if\isfinal\yes
                {\raggedleft
                        \normalsize NAIST-IS-\edoctitleacronym\studentnumberstr \\
                }
                \vspace*{9mm}
                \begin{center}
                        \Large\bf\jdoctitle
                \end{center}
                \vspace*{27mm}
                \begin{center}
                        \Large\bf\titlestr
                \end{center}
                \vspace*{18mm}
                \begin{center}
                        \Large\authorstr
                \end{center}
                \vspace*{50mm}
                \begin{center}
                        \datestr
                \end{center}
                \vspace*{4.5mm}
                \begin{center}
                        奈良先端科学技術大学院大学 \\
                        情報科学研究科 {\jdepartmentstr}専攻
                \end{center}
                \vspace*{\fill}
        \else
                \vspace*{\fill}
                \begin{center}
                        {\Huge\bf DRAFT}
                \end{center}
                \vspace*{1cm}
                \begin{center}
                        \Large\bf\titlestr
                \end{center}
                \vspace*{1cm}
                \begin{center}
                        {\Large \authorstr}
                \end{center}
                \vspace*{1cm}
                \begin{center}
                        {\Large\bf \today}
                \end{center}
                \begin{center}
                        {\Large\bf \curtime}
                \end{center}
                \vspace*{\fill}
        \fi
}
