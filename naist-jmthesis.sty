% drafts
%
\def\ps@draft{
\def\isfinal{0}
\def\draftstr{{\jpntoday, \curtime: \authorstr}}
\def\draftfoot{%
        {{\sf \draftstr}\hfill{\sf \thepage}}%
}
\def\@evenhead{}%
\def\@oddhead{}%
\def\@oddfoot{{\draftfoot}}%
\def\@evenfoot{{\draftfoot}}%
}
